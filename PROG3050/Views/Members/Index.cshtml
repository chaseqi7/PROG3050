@model IEnumerable<PROG3050.Models.Account>

@{
    ViewBag.Title = "Members";
}

<h2>Members</h2>

<div class="pull-right">
    @using (Html.BeginForm("Index", "Members", FormMethod.Get))
    {
        @Html.TextBox("Search") <input type="submit" value="Search" />
    }
</div>

<table class="table">
    <tr>
        <th>
            User Group
        </th>
        <th>
            Member
        </th>
        <th>
            Date Registered
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usergroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registered)
            </td>
            <td>
                @Html.ActionLink("View Profile", "UserProfile", "Accounts", new { member = item.AccountName },null)
            </td>
        </tr>
   
    }

</table>
