@model PROG3050.Models.Account

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="pull-right">
            <span class="base-link pull-right">@Html.ActionLink("Change Password", "ChangePassword")</span><br />
            <span class="base-link pull-right">@Html.ActionLink("Edit Payment Information", "Index", "PaymentInfo")</span>
        </div>
        <h4 class="pull-left">Profile</h4>

        <div class="clearfix"></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.AccountName)
        @Html.HiddenFor(model => model.UPassword)
        @Html.HiddenFor(model => model.Registered)

@if (Session["Permissions"] != null && (int)Session["Permissions"] >= 2)
{
        <div class="form-group">
            <label class="control-label col-md-2" for="Usergroup">User Group</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Usergroup, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usergroup, "", new { @class = "text-danger" })
            </div>
        </div>
}

        <div class="form-group">
            <label class="control-label col-md-2" for="Email">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <h4>Shipping Details</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="Country">Country</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="StateProvince">State / Province</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StateProvince, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StateProvince, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="City">City</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Address">Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
