@model PROG3050.Models.Account

@{
    ViewBag.Title = "Password Recovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-success login-prompt">
        <div class="panel-heading">
            <h4>Password Recovery</h4>
        </div>
        <div class="panel-body">
        @using (Html.BeginForm())
        {
                @Html.AntiForgeryToken()
                <div class="col-sm-9">
                    <p class="text-danger"><small>@ViewBag.AccountError</small></p>
                    <input placeholder="Username" class="form-control text-box single-line" id="account" name="account" type="text">
                </div>
                <div class="col-sm-3">
                    <div class="clearfix"></div>
                    <input class="btn btn-default pull-right" type="submit" value="Next"/>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
