@model IEnumerable<PROG3050.Models.SecurityQuestion>

@{
    ViewBag.Title = "Security Questions";
    var counter = 0;
}

<h2>Security Questions</h2>

<p>
    @Html.ActionLink("New Security Question", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    if (item.AccountName == (string)Session["User"])
    {
        counter += 1;
    }
}
@foreach (var item in Model)
{
    if (item.AccountName == (string)Session["User"])
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { account = item.AccountName, question = item.Question })
                @if(counter > 0)
                {
                    <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { account = item.AccountName, question = item.Question });
                }
            </td>
        </tr>
    }
}

</table>
